            function validation() {
                var place = $("#destination").val();
                var indt = $("#checkin").val();
                var outdt = $("#checkout").val();
                if (place == "" || place == null || indt == "" || outdt == "" || indt == null || outdt == null) {
                    alert("Please Enter the Destination or Date Fields");
                    return false;
                }
            }


            function autocomp() {
                var availableTags = [];

                var word = $("#destination").val();
                var leng = word.length;
                if (word != "" && leng >= 1) {

                    $.ajax({
                        url: "/Search/Autocomplete/",
                        dataType: "JSON",
                        data: { city: word, count: leng },
                        cache: false,
                        type: "GET",
                        success: function (data) {

                            $.each(data, function (id, option) {
                                availableTags.push(option.CityName);
                            })

                            $("#destination").autocomplete({
                                source: availableTags

                            });


                        }
                    });
                }
            }

            function GuestDrop() {


                var room = $("#Adult").val();
                if (room == 1) {

                    $("#guest2").hide();
                    $("#guest3").hide();
                    $("#guest4").hide();
                    $("#guest5").hide();
                }
                else if (room == 2) {

                    $("#guest2").show();
                    $("#guest3").hide();
                    $("#guest4").hide();
                    $("#guest5").hide();
                }
                else if (room == 3) {

                    $("#guest2").show();
                    $("#guest3").show();
                    $("#guest4").hide();
                    $("#guest5").hide();
                }
                else if (room == 4) {

                    $("#guest2").show();
                    $("#guest3").show();
                    $("#guest4").show();
                    $("#guest5").hide();
                }

                else if (room == 5) {

                    $("#guest2").show();
                    $("#guest3").show();
                    $("#guest4").show();
                    $("#guest5").show();
                }
            }

            $(document).ready(function () {
                GuestDrop();
            });

